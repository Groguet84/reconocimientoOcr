<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="reconocimiento-ocr"
    version="1.0.0">
    <name>OCR</name>
    <description>Cordova OCR Plugin</description>
    <license>MIT</license>
    <keywords></keywords>
    <repo>https://github.com/thecouk/ionic-cordova-plugin-template.git</repo>
    

    <!-- android -->
    <platform name="android">
      <js-module src="www/plugin.js" name="plugin">
        <runs/>

        <!-- Este es el nombre por el cual se accedera el plugin -->
        <clobbers target="ReconocimientoOcr" />
      </js-module>
      <config-file target="res/xml/config.xml" parent="/*">
        <feature name="ReconocimientoOcr">
          <param name="android-package" value="com.example.ReconocimientoOcr" />
          <param name="onload" value="true" />
        </feature>
      </config-file>

      <source-file src="src/android/com/example/ReconocimientoOcr.java" target-dir="src/com/example/" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <js-module src="www/plugin.js" name="plugin">
            <runs/>
            <clobbers target="ReconocimientoOcr" />
        </js-module>
        <config-file target="config.xml" parent="/*">
            <feature name="ReconocimientoOcr">
                <param name="ios-package" value="ReconocimientoOcr" onload="true" />
            </feature>
        </config-file>

        <header-file src="src/ios/ReconocimientoOcr.h" />
        <source-file src="src/ios/ReconocimientoOcr.m" />
    </platform>
</plugin>
